<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/retangleIndicacoes"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@color/primaria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textIllidan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="O Illidan está de olho"
        android:textColor="@color/secundaria"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/retangleIndicacoes"
        app:layout_constraintStart_toStartOf="@id/retangleIndicacoes"
        app:layout_constraintTop_toTopOf="@id/retangleIndicacoes" />

    <ImageView
        android:id="@+id/imageIllidan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:contentDescription="Illidan"
        android:src="@drawable/illidan"
        app:layout_constraintBottom_toBottomOf="@id/retangleIndicacoes"
        app:layout_constraintStart_toEndOf="@id/textIllidan"
        app:layout_constraintTop_toTopOf="@id/retangleIndicacoes"

        />

    <TextView
        android:id="@+id/textIndicacoesNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="Nome"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/retangleIndicacoes" />

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:text="Nome do usuário"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/textIndicacoesNome"
        app:layout_constraintTop_toBottomOf="@+id/textIndicacoesNome" />

    <View
        android:id="@+id/linha1"
        android:layout_width="match_parent"
        android:layout_height="0.9dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@id/textViewNome"
        app:layout_constraintStart_toStartOf="@id/textViewNome"
        app:layout_constraintTop_toBottomOf="@+id/textViewNome" />

    <TextView
        android:id="@+id/textIndicacoesEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="E-mail"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linha1" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:text="E-mail"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/textIndicacoesEmail"
        app:layout_constraintTop_toBottomOf="@+id/textIndicacoesEmail" />

    <View
        android:id="@+id/linha2"
        android:layout_width="match_parent"
        android:layout_height="0.9dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@id/textViewEmail"
        app:layout_constraintStart_toStartOf="@id/textViewEmail"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmail" />

    <TextView
        android:id="@+id/textIndicacoesTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="Telefone"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linha2" />

    <TextView
        android:id="@+id/textViewTelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:text="(31)943822313412"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/textIndicacoesTelefone"
        app:layout_constraintTop_toBottomOf="@+id/textIndicacoesTelefone" />

    <View
        android:id="@+id/linha3"
        android:layout_width="match_parent"
        android:layout_height="0.9dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@id/textViewTelefone"
        app:layout_constraintStart_toStartOf="@id/textViewTelefone"
        app:layout_constraintTop_toBottomOf="@+id/textViewTelefone" />


</androidx.constraintlayout.widget.ConstraintLayout>